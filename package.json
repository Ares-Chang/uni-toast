{
  "name": "uni-toast",
  "type": "module",
  "version": "0.0.0",
  "packageManager": "pnpm@9.5.0",
  "description": "Uni App 版 Toast 组件实现",
  "author": "Ares Change <AresChang114@qq.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/Ares-Chang",
  "homepage": "https://github.com/Ares-Chang/uni-toast#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ares-Chang/uni-toast.git"
  },
  "bugs": "https://github.com/Ares-Chang/uni-toast/issues",
  "keywords": [],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "play": "nr dev & nr -C examples dev:h5",
    "lint": "eslint .",
    "prepublishOnly": "nr build",
    "release": "bumpp && npm publish",
    "start": "esno src/index.ts",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks"
  },
  "peerDependencies": {
    "vue": "^3.4.38"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.23.0",
    "@antfu/ni": "^0.22.0",
    "@antfu/utils": "^0.7.10",
    "@types/node": "^20.14.11",
    "@vitejs/plugin-vue": "^5.1.3",
    "bumpp": "^9.4.1",
    "eslint": "^9.7.0",
    "esno": "^4.7.0",
    "lint-staged": "^15.2.7",
    "pnpm": "^9.5.0",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.5.3",
    "vite": "^5.3.4",
    "vite-plugin-dts": "^4.1.0",
    "vitest": "^2.0.3",
    "vue": "^3.4.38"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
